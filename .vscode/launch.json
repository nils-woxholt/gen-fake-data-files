    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        ,
        {
            "name": "CSV file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["-n", "10", "-f", "out.csv", "-ft", "csv", "-m", "metadata.json"],
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "justMyCode": true        
        }
    ]
}